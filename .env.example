# BeeriManager Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=BeeriManager

# Authentication (REQUIRED)
# Generate with: npm run dev, then visit /api/generate-hash?password=YourPassword
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
ADMIN_PASSWORD_HASH=$2b$10$your-hashed-password

# Optional: External integrations (for future use)
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id
WHATSAPP_GROUP_LINK=https://chat.whatsapp.com/your-group-link

# Development
NODE_ENV=development