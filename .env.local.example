# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=BeeriManager

# JWT Secret for admin authentication
JWT_SECRET=your-super-secret-jwt-key

# Admin password (hashed with bcrypt)
# IMPORTANT: Escape dollar signs with backslash for .env files!
# Example for password "6262":
ADMIN_PASSWORD_HASH=\$2a\$10\$umBWkRR9LEnCDvbIBq5vyeIhQdT8qkjm7NYYiM9nNYf.0Z4zxUFTi

# Optional: External integrations
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id
WHATSAPP_GROUP_LINK=https://chat.whatsapp.com/your-group-link

# Google Drive API Configuration (for protocol document uploads)
# Service Account credentials from Google Cloud Console
GOOGLE_DRIVE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_DRIVE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
# Folder ID where protocol documents will be uploaded
GOOGLE_DRIVE_PROTOCOLS_FOLDER_ID=your-protocols-folder-id

# Development
NODE_ENV=development