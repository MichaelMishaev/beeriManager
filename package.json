{
  "name": "beerimanager",
  "version": "1.0.0",
  "description": "Parent Committee Coordination App - A Hebrew-first PWA for managing school parent committee activities",
  "main": "index.js",
  "scripts": {
    "dev": "lsof -ti:4500 | xargs kill -9 2>/dev/null || true && next dev -p 4500",
    "dev:clean": "lsof -ti:4500 | xargs kill -9 2>/dev/null || true && rm -rf .next && next dev -p 4500",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:performance": "playwright test tests/e2e/05-performance.spec.ts",
    "test:parallel": "playwright test --workers=4",
    "test:report": "playwright show-report",
    "automation:watch": "playwright test --watch",
    "automation:dev": "concurrently \"npm run dev\" \"npm run automation:watch\"",
    "db:migrate": "supabase db push",
    "db:seed": "supabase db seed",
    "db:reset": "supabase db reset",
    "type-check": "tsc --noEmit",
    "icons:generate": "node scripts/generate-icons.js",
    "postinstall": "npm run icons:generate"
  },
  "keywords": [
    "pwa",
    "parent-committee",
    "hebrew",
    "calendar",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.90.2",
