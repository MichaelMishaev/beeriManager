    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "html2canvas": "^1.4.1",
    "ical-generator": "^4.1.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.544.0",
    "next": "^14.2.0",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.33",
